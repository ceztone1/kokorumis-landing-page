---
import { Image } from "astro:assets";
import star from "../../public/img/star.png";
import melody from "../../public/img/melody.webp";
import Carousel from "../components/Carousel.vue";
---

<section
  class="flex md:flex-sm flex-col-reverse md:flex-row items-center justify-around gap-4 py-4 mt-10"
>
  <Carousel client:load class="w-full md:w-[60%]" />
  <div class="relative lading-container w-full md:w-[40%]">
    <Image
      class="rounded-2xl absolute rigth-[-80px] top-[-50px] star-movement"
      loading="eager"
      src={star}
      alt="Star"
      width={100}
    />
    <Image
      class="rounded-2xl absolute right-10 bottom-0 star-movement"
      loading="eager"
      src={star}
      alt="Star"
      width={100}
    />
    <p class="flex flex-col items-center gap-4 text-fontColor appear">
      <span class="text-8xl font-Chewy text-fontColor">Make it posible!</span>
      <span class="text-4xl font-Chewy text-fontColor">Crafts & crochet</span>
    </p>
  </div>
</section>
<style>
  .star-movement {
    animation:
      appear 1s,
      star-movement 2s infinite;
  }
  @keyframes star-movement {
    0% {
      -webkit-transform: rotate(0);
      transform: rotate(0);
      -webkit-animation-timing-function: ease-in;
      animation-timing-function: ease-in;
    }

    55% {
      -webkit-transform: rotate(0.1turn);
      transform: rotate(0.1turn);
      -webkit-animation-timing-function: ease-in;
      animation-timing-function: ease-in;
    }

    100% {
      -webkit-transform: rotate(0);
      transform: rotate(0);
      -webkit-animation-timing-function: ease-in;
      animation-timing-function: ease-in;
    }
  }
  .appear {
    animation-name: appear;
    animation-duration: 1s;
  }
  @keyframes appear {
    0% {
      opacity: 0;
      -webkit-transform: translateY(-100px);
      transform: translateY(-100px);
    }
    100% {
      opacity: 1;
      -webkit-transform: translateY(0);
      transform: translateY(0);
    }
  }
</style>
